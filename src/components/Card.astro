---
const { image, title, url, excerpt, date, processDate = true } = Astro.props;
const formattedDate = new Date(date).toLocaleDateString("fa-IR", {
    month: "long",
    year: "numeric",
});
---

<div class="card">
    <img class="card-img" src={image} alt={title} />
    <a class="card-title" href={url}><h2>{title}</h2></a>
    <p class="card-excerpt" set:html={excerpt} />
    <p class="card-date">{processDate ? formattedDate : date}</p>
</div>
<style>
    .card {
        max-width: 273px;
    }
    .card-title {
        font-family: Anjoman Variable;
        font-size: 16px;
        font-weight: 700;
        line-height: 25px;
        letter-spacing: 0em;
        text-align: right;
        color: black;
        text-decoration: none;
    }
    .card-excerpt {
        font-family: Anjoman Variable;
        font-size: 12px;
        font-weight: 500;
        line-height: 19px;
        letter-spacing: 0em;
        text-align: right;
    }
    .card-img {
        max-width: 273px;
        width: 100%;
    }
    .card-date {
        margin-top: 48px;
        font-family: Anjoman Variable;
        font-size: 12px;
        font-weight: 500;
        line-height: 19px;
        letter-spacing: 0em;
        text-align: right;

        color: var(--color-text-primary-light);
    }
</style>
