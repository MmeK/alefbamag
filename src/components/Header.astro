---
import { Icon } from "astro-icon";
---

<header>
    <div class="bookmark-bar"></div>
    <nav class="nav">
        <div class="banner">
            <div class="menu-container">
                <Icon class="menu" name="ic:round-menu" />
                <Icon id="close" class="close" name="ion:close" />
            </div>
            <a href="/">
                <img src="alefba.svg" alt="" srcset="" />
                <div>
                    <span> نشریه دانشجویی انجمن علمی ادبیات</span>
                    <span class="second-span">
                        دانشگاه صنعتی خواجه نصیرالدین طوسی</span
                    >
                </div>
            </a>
        </div>
        <div class="break"></div>
        <ul class="links">
            <li class="nav-link"><a href="">خبرنامه</a></li>
            <li class="nav-link"><a href="">وبلاگ</a></li>
            <li class="nav-link"><a href="">الفبا</a></li>
            <li class="nav-link"><a href="">درباره ما</a></li>
        </ul>
    </nav>
    <hr />
</header>

<style>
    .banner img {
        width: 36px;
    }
    .second-span {
        font-weight: bolder;
        font-size: 18px;
        display: block;
        color: var(--color-secondary);
    }
    span {
        font-size: 20px;
        min-width: 175px;
        font-weight: 900;
        display: inline-block;
        color: var(--color-secondary);
    }
    hr {
        margin: 0;
        width: 850px;
        max-width: 100%;
        color: var(--color-secondary-light);
    }
    nav {
        margin-top: 28px;
        margin-right: 40px;
        align-items: end;
        padding-bottom: 8px;
        font-size: 12px;
        display: flex;
        width: 80%;
        flex-wrap: wrap;
    }
    .menu-container {
        display: none;
        position: relative;
        width: fit-content;
    }
    .menu,
    .close {
        position: absolute;
        top: -24px;
        left: 0;
        color: var(--color-secondary-light);
        height: 48px;
        width: 48px;
    }
    .close {
        display: none;
    }
    .bookmark-bar {
        z-index: -2;
        position: absolute;
        width: 31px;
        height: 205px;
        background-color: var(--color-primary-dark);
        left: 113px;
        top: -17px;
    }

    .links {
        padding: 0;
        margin-bottom: 0;
        gap: 4vw;
        list-style: none;
        display: flex;
        font-size: 18px;
    }
    .banner {
        padding-right: 12px;
        display: flex;
        align-items: center;
    }
    a {
        color: var(--color-text-primary);
        text-decoration: none;
    }
    .banner a {
        display: flex;
        gap: 16px;
    }
    .break {
        height: 0;
        width: 56px;
    }

    @media (max-width: 1200px) {
        .bookmark-bar {
            display: none;
        }
    }
    @media (max-width: 850px) {
        hr {
            width: 90vw;
        }
        .bookmark-bar {
            display: block;
            background: var(--color-secondary);
            width: 12px;
            left: 50px;
            height: 98px;
        }
        .links {
            display: none;
            flex-direction: column;
        }
        .links li {
            display: block;
        }
        .links.active {
            display: flex;
        }

        .menu-container {
            display: block;
        }
        .break {
            flex-basis: 100%;
            height: 0;
        }
        hr {
            margin-top: 12px;
        }

        span {
            font-size: 10px;
        }
        .second-span {
            font-size: 9px;
        }
    }
    @media (max-width: 320px) {
        .bookmark-bar {
            display: none;
        }
    }
</style>
<script>
    const menu = document.querySelector(".menu");
    const closeMenu = document.querySelector("#close");
    const links = document.querySelector(".links");
    menu.addEventListener("click", () => {
        menu.style.display = "none";
        closeMenu.style.display = "block";
        links.classList.toggle("active");
    });
    closeMenu.addEventListener("click", () => {
        closeMenu.style.display = "none";
        menu.style.display = "block";
        links.classList.toggle("active");
    });
</script>
