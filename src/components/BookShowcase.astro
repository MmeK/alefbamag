---
const {
    width,
    height,
    bookImage,
    bookTitle,
    bookSubtitle,
    publishDate,
    fidiboUrl,
    TaagcheUrl,
    buyUrl,
} = Astro.props;
---

<div class="book-container">
    <img src={bookImage} alt="Book Image" class="book-image" />

    <div class="book-shadow"></div>
</div>

<div class="description-container">
    <h3 class="title">{bookTitle}</h3>
    <h3 class="subtitle" set:html={bookSubtitle} />
    <h3 class="date">{publishDate}</h3>
    <div class="buy-buttons-container">
        <a href={buyUrl} class="active">خرید مستقیم</a>
        <a href={fidiboUrl}>فیدیبو</a>
        <a href={TaagcheUrl}>طاقچه</a>
    </div>
</div>
<style define:vars={(width, height)}>
    .title {
        color: var(--color-text-primary-light);
        font-family: Anjoman Variable;
        font-size: 24px;
        font-weight: 700;
        line-height: 38px;
        letter-spacing: 0em;
        text-align: right;
    }
    .subtitle {
        color: black;
        font-family: Anjoman Variable;
        font-size: 24px;
        font-weight: 700;
        line-height: 38px;
        letter-spacing: 0em;
        text-align: right;
    }
    .date {
        color: black;
        font-family: Anjoman Variable;
        font-size: 16px;
        font-weight: 500;
        line-height: 25px;
        letter-spacing: 0em;
        text-align: right;
    }
    /* Book Effect */
    .book-shadow {
        z-index: -2;
        top: 68%;
        left: 35%;
        filter: blur(0.7rem);
        position: absolute;
        background: var(--color-text-primary);
        transform: skew(-240deg, 20deg);
        width: calc(var(--width) * 0.2);
        height: 140px;
    }
    .book-container {
        position: relative;
        max-height: var(--height);
        align-items: center;
        justify-content: space-between;
        display: flex;
    }
    .book-image {
        display: block;
        max-width: 100%;
    }

    /* Buy Buttons */
    .description-container {
        max-width: 380px;
    }
    .buy-buttons-container a {
        display: block;
        cursor: pointer;
        margin-top: 16px;
        max-width: 365px;
        width: 100%;
        text-decoration: none;
        color: var(--color-secondary);
        background: transparent;
        border: 1px solid var(--color-secondary-light);
        transition: background 200ms ease-in-out, scale 200ms ease-in-out;
        padding: 6px 12px;
        text-align: center;
    }
    .buy-buttons-container a.active {
        color: var(--color-text-secondary);
        background: var(--color-secondary-light);
    }
    .buy-buttons-container a:hover {
        scale: 1.1;
        color: var(--color-text-secondary);
    }
    .buy-buttons-container a.active:hover {
        background: transparent;
        color: var(--color-secondary);
    }
    @media (max-width: 850px) {
        .book-shadow {
            display: none;
        }
    }
</style>
